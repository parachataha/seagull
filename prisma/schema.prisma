generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  name      String
  email     String  @unique
  slug      String? @unique
  password  String
  bio       String?
  avatarUrl String?
  createdAt Int
  updatedAt Int?

  sessions Session[]
}

model Session {
  user       User    @relation(fields: [userId], references: [id])
  id         String  @id
  userId     Int
  userAgent  String?
  secretHash Bytes
  createdAt  Int
  expiresAt  Int
}
